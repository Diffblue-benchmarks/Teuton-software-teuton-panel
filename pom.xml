<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>teuton</groupId>
	<artifactId>teuton-panel</artifactId>

	<name>teuton-panel</name>
	<description>Graphical front-end for TEUTON software</description>
	<version>0.0.2</version>

	<organization>
		<name>Teuton Software</name>
		<url>mail:teuton.software@protonmail.com</url>
	</organization>

	<licenses>
		<license>
			<name>GPL-3.0</name>
			<comments>GNU General Public License v3.0</comments>
			<url>https://github.com/fvarrui/teuton-panel/blob/master/LICENSE</url>
		</license>
	</licenses>

	<developers>
		<developer>
			<id>fvarrui</id>
			<name>Fran Vargas</name>
			<url>https://github.com/fvarrui</url>
		</developer>
		<developer>
			<id>dvarrui</id>
			<name>David Vargas</name>
			<url>https://github.com/dvarrui</url>
		</developer>
	</developers>

	<scm>
		<connection>scm:git:git://github.com/fvarrui/teuton-panel.git</connection>
		<developerConnection>scm:git:ssh://github.com/fvarrui/teuton-panel.git</developerConnection>
		<url>https://github.com/fvarrui/teuton-panel</url>
	</scm>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<exec.mainClass>teuton.panel.ui.Main</exec.mainClass>
		<maven.compiler.source>11</maven.compiler.source>
		<maven.compiler.target>11</maven.compiler.target>
		<jre.minVersion>11.0.2</jre.minVersion>

		<!-- https://github.com/AdoptOpenJDK/openjdk11-binaries/releases -->
		<jre.base.url>https://github.com/AdoptOpenJDK/openjdk11-binaries/releases/download/jdk11u-2019-02-14-01-37</jre.base.url>
		<jre.folderName>jdk-11.0.2+9-jre</jre.folderName>

		<jre.windows.file>OpenJDK11U-jre_x64_windows_hotspot_2019-02-14-01-37.zip</jre.windows.file>
		<jre.linux.file>OpenJDK11U-jre_x64_linux_hotspot_2019-02-14-01-37.tar.gz</jre.linux.file>

		<download.url>${jre.base.url}/${jre.file}</download.url>
		<download.unpack>false</download.unpack>
		<download.outputDirectory>${project.build.directory}/jre</download.outputDirectory>
	</properties>

	<profiles>

		<!-- windows specific configuration -->
		<profile>
			<id>windows-platform</id>
			<activation>
				<os>
					<family>windows</family>
				</os>
			</activation>
			<properties>
				<jre.file>${jre.windows.file}</jre.file>
			</properties>
			<build>
				<plugins>
					<!-- create a windows executable -->
					<plugin>
						<groupId>com.akathist.maven.plugins.launch4j</groupId>
						<artifactId>launch4j-maven-plugin</artifactId>
						<version>1.7.25</version>
						<executions>
							<execution>
								<id>generate-windows-executable</id>
								<phase>package</phase>
								<goals>
									<goal>launch4j</goal>
								</goals>
								<configuration>
									<headerType>gui</headerType>
									<jar>${project.build.directory}/${project.name}-${project.version}.jar</jar>
									<outfile>${project.build.directory}/app/${project.name}.exe</outfile>
									<icon>assets/windows/${project.name}.ico</icon>
									<manifest>assets/windows/${project.name}.exe.manifest</manifest>
									<classPath>
										<mainClass>${exec.mainClass}</mainClass>
									</classPath>
									<jre>
										<bundledJre64Bit>true</bundledJre64Bit>
										<minVersion>${jre.minVersion}</minVersion>
										<runtimeBits>64</runtimeBits>
										<path>jre</path>
									</jre>
									<versionInfo>
										<fileVersion>1.0.0.0</fileVersion>
										<txtFileVersion>1.0.0.0</txtFileVersion>
										<copyright>${project.organization.name}</copyright>
										<fileDescription>${project.description}</fileDescription>
										<productVersion>${teuton.panel.version}.0</productVersion>
										<txtProductVersion>${teuton.panel.version}.0</txtProductVersion>
										<productName>${project.name}</productName>
										<internalName>${project.name}</internalName>
										<originalFilename>${project.name}.exe</originalFilename>
									</versionInfo>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<!-- create windows installer with inno setup -->
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<version>1.6.0</version>
						<executions>
							<execution>
								<id>generate-windows-installer</id>
								<phase>package</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>iscc</executable>
									<arguments>
										<argument>/O${project.build.directory}</argument>
										<argument>/F${project.name}_${project.version}_amd64</argument>
										<argument>assets/windows/teuton-panel.iss</argument>
									</arguments>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>

		<!-- gnu/linux specific configuration -->
		<profile>
			<id>linux-platform</id>
			<activation>
				<os>
					<family>linux</family>
				</os>
			</activation>
			<properties>
				<jre.file>${jre.linux.file}</jre.file>
			</properties>
			<build>
				<plugins>
					<!-- create a gnu/linux executable -->
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<version>1.6.0</version>
						<executions>
							<execution>
								<id>generate-linux-executable</id>
								<phase>package</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>${basedir}/assets/linux/packager.sh</executable>
									<arguments>
										<argument>${project.build.directory}/${project.name}-${project.version}.jar</argument>
										<argument>${project.build.directory}/app/${project.name}</argument>
									</arguments>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<!-- copy assets to app folder -->
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-resources-plugin</artifactId>
						<version>3.1.0</version>
						<executions>
							<execution>
								<id>copy-resources</id>
								<phase>package</phase>
								<goals>
									<goal>copy-resources</goal>
								</goals>
								<configuration>
									<outputDirectory>${basedir}/target/app</outputDirectory>
									<resources>
										<resource>
											<directory>assets/linux</directory>
											<includes>
												<include>../../LICENSE</include>
												<include>teuton.png</include>
											</includes>
										</resource>
									</resources>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<!-- generate deb package -->
					<plugin>
						<artifactId>jdeb</artifactId>
						<groupId>org.vafer</groupId>
						<version>1.7</version>
						<executions>
							<execution>
								<phase>package</phase>
								<goals>
									<goal>jdeb</goal>
								</goals>
								<configuration>
									<controlDir>assets/linux/deb</controlDir>
									<deb>${project.build.directory}/${project.name}_${teuton.panel.version}_amd64.deb</deb>
									<dataSet>
										<data>
											<type>directory</type>
											<src>${project.build.directory}/app</src>
											<mapper>
												<type>perm</type>
												<prefix>/opt/${project.name}</prefix>
											</mapper>
											<excludes>teuton-panel,jre/bin/java</excludes>
										</data>
										<data>
											<type>file</type>
											<src>${project.build.directory}/app/${project.name}</src>
											<mapper>
												<type>perm</type>
												<filemode>755</filemode>
												<prefix>/opt/${project.name}</prefix>
											</mapper>
										</data>
										<data>
											<type>file</type>
											<src>assets/linux/${project.name}.desktop</src>
											<mapper>
												<type>perm</type>
												<prefix>/usr/share/applications</prefix>
											</mapper>
										</data>
										<data>
											<type>file</type>
											<src>assets/linux/${project.name}.policy</src>
											<mapper>
												<type>perm</type>
												<prefix>/usr/share/polkit-1/actions</prefix>
											</mapper>
										</data>
										<data>
											<type>file</type>
											<src>${project.build.directory}/app/jre/bin/java</src>
											<mapper>
												<type>perm</type>
												<filemode>755</filemode>
												<prefix>/opt/${project.name}/jre/bin</prefix>
											</mapper>
										</data>
										<data>
											<type>link</type>
											<linkTarget>/opt/${project.name}/${project.name}</linkTarget>
											<linkName>/usr/local/bin/${project.name}</linkName>
											<symlink>true</symlink>
											<mapper>
												<type>perm</type>
												<filemode>777</filemode>
											</mapper>
										</data>
									</dataSet>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>

	</profiles>

	<build>
		<plugins>

			<!-- download jre -->
			<plugin>
				<groupId>com.googlecode.maven-download-plugin</groupId>
				<artifactId>download-maven-plugin</artifactId>
				<version>1.4.1</version>
				<executions>
					<execution>
						<id>download-jre</id>
						<phase>package</phase>
						<goals>
							<goal>wget</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<!-- copy all dependencies to app folder -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>3.1.1</version>
				<executions>
					<execution>
						<id>copy-dependencies</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<outputDirectory>${project.build.directory}/app/libs</outputDirectory>
				</configuration>
			</plugin>

			<!-- generate runnable jar in app folder -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>3.1.1</version>
				<configuration>
					<archive>
						<manifest>
							<addClasspath>true</addClasspath>
							<classpathPrefix>libs/</classpathPrefix>
							<mainClass>${exec.mainClass}</mainClass>
						</manifest>
					</archive>
					<outputDirectory>${project.build.directory}</outputDirectory>
				</configuration>
			</plugin>

			<!-- unzip jre in app folder -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>truezip-maven-plugin</artifactId>
				<version>1.2</version>
				<executions>
					<execution>
						<id>unzip-jre</id>
						<goals>
							<goal>copy</goal>
						</goals>
						<phase>package</phase>
						<configuration>
							<files>
								<file>
									<source>${project.build.directory}/jre/${jre.file}/${jre.folderName}</source>
									<outputDirectory>${project.build.directory}/app</outputDirectory>
									<destName>jre</destName>
								</file>
							</files>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!-- copy LICENSE file to app folder -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>3.1.0</version>
				<executions>
					<execution>
						<id>copy-resources</id>
						<phase>package</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${basedir}/target/app</outputDirectory>
							<resources>
								<resource>
									<directory>${basedir}</directory>
									<include>LICENSE</include>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!-- read properties file -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>properties-maven-plugin</artifactId>
				<version>1.0.0</version>
				<executions>
					<execution>
						<phase>initialize</phase>
						<goals>
							<goal>read-project-properties</goal>
						</goals>
						<configuration>
							<files>
								<file>src/main/resources/teuton-panel.properties</file>
							</files>
						</configuration>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>

